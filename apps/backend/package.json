{
  "name": "backend",
  "version": "1.0.0",
  "description": "Backend API para MatBett - Matched Betting Tracking Application",
  "main": "dist/server.js",
  "type": "module",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "dev": "tsx --watch src/server.ts",
    "build": "tsc",
    "clean": "rm -rf dist",
    "start": "node dist/server.js",
    "start:prod": "NODE_ENV=production node dist/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "ts": "tsc --noEmit",
    "typecheck": "tsc --noEmit",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:migrate:prod": "prisma migrate deploy",
    "prisma:studio": "prisma studio",
    "prisma:seed": "tsx prisma/seed.ts",
    "prisma:reset": "prisma migrate reset --force",
    "docker:up": "docker-compose -f ../../docker-compose.yml up -d",
    "docker:down": "docker-compose -f ../../docker-compose.yml down",
    "docker:logs": "docker-compose -f ../../docker-compose.yml logs -f postgres",
    "check": "npm run lint && npm run format:check && npm run ts"
  },
  "keywords": [
    "matched-betting",
    "betting",
    "api",
    "express",
    "typescript",
    "prisma",
    "postgresql"
  ],
  "author": "MatBett Team",
  "license": "MIT",
  "dependencies": {
    "@asteasolutions/zod-to-openapi": "^8.1.0",
    "@matbett/api": "workspace:*",
    "@matbett/shared": "workspace:*",
    "@paralleldrive/cuid2": "^3.0.4",
    "@prisma/adapter-pg": "^7.1.0",
    "@prisma/client": "^7.0.0",
    "@trpc/server": "^11.7.1",
    "bcryptjs": "^3.0.3",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "express-rate-limit": "^8.2.1",
    "fast-json-stable-stringify": "^2.1.0",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.1",
    "pg": "^8.16.3",
    "prisma": "^7.0.0",
    "superjson": "^2.2.5",
    "zod": "4.1.12"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.5",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/node": "^24.10.1",
    "@types/pg": "^8.15.6",
    "@typescript-eslint/eslint-plugin": "^8.47.0",
    "@typescript-eslint/parser": "^8.47.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "jest": "^30.2.0",
    "nodemon": "^3.1.11",
    "prettier": "^3.6.2",
    "prisma-zod-generator": "^1.32.2",
    "ts-jest": "^29.4.5",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.47.0"
  }
}
